= provide(:content_name, "CONTACTS > #{@contact.name}")

.row
	= render 'contacts/showinfo'
.row
	.col-md-12#client_profile
		.row
			= render 'contacts/shownav'
		.row.contact_description
			.col-md-3.notes_side
				#session_notes
					%p
						SESSION NOTES
						%a{href: new_contact_note_path}
							%i.fa.fa-plus-circle
					%ul
						- @notes.each do |note|
							%li
								%a{href: edit_contact_note_path(params[:contact_id], note[:id])} #{note.caption}
				%hr
				#documents
					%p
						DOCUMENTS
						%i.fa.fa-plus-circle
					%ul
						-2.times do
							%li
								%a{href: '#'} Payment contract
			.col-md-9.notes_content
				= form_for(:note, :url => contact_notes_path(params[:contact_id]), :html => {:method => :post, :class => 'form' }) do |f|
					.form-group
						= f.text_field :caption, class: 'form-control form-control-square'
					.form-group
						= f.text_area :content, class: 'form-control form-control-square', :rows => 20
					.form-group.pull-right
						= f.submit 'DELETE NOTE', class: 'cv_btn'
						= f.submit 'SAVE NOTE', class: 'cv_btn'